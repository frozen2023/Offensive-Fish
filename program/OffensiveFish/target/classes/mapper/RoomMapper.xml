<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fish.offensivefish.mapper.RoomMapper">
    <select id="selectAllRoom" resultType="com.fish.offensivefish.pojo.Room">
        select *from offensivefish.room
        where isOpen=0
    </select>
    <insert id="insertRoom" parameterType="com.fish.offensivefish.pojo.Room">
        insert into offensivefish.room(roomId, roomOwnerId, playerId, Vcode, numbers, isOpen)
        values (#{roomId},#{roomOwnerId},#{playerId},#{Vcode},#{numbers},#{isOpen});
    </insert>
    <select id="selectRoomByRoomOwnerId">
        select *from offensivefish.room
        where roomOwnerId= #{roomOwnerId}
    </select>
    <update id="updateRoom" parameterType="com.fish.offensivefish.pojo.Room">
        update offensivefish.room
        set playerId=#{playerId},Vcode=#{Vcode},numbers=#{numbers},isOpen=#{isOpen}
        where roomId=#{roomId};
    </update>
    <delete id="deleteRoom">
        delete from offensivefish.room
        where roomId=#{roomId};
    </delete>
</mapper>